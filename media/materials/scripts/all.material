// -----------------------------------------------------------------
//  TEJO
// -----------------------------------------------------------------

material tejo_metal {
    technique {
        pass {
            lighting on
            ambient 0.4 0.4 0.4 1.0
            diffuse 0.7 0.7 0.7 1.0
            specular 1.0 1.0 1.0 1.0 32

            depth_write on
            depth_check on
            shading gouraud

            // QUITA ESTO:
            // cull_hardware clockwise

            // usa esto:
            cull_hardware none

            texture_unit {
                texture tejo_small.jpg
                filtering trilinear
            }
        }
    }
}


// -----------------------------------------------------------------

material backboard_wood {
    receive_shadows on
    technique {
        pass {
            lighting on
            ambient 0.6 0.5 0.4 1.0
            diffuse 0.7 0.6 0.5 1.0
            specular 0.2 0.2 0.2 1.0 12.0
            emissive 0 0 0 1.0
            depth_check on
            depth_write on
            cull_hardware clockwise
            shading gouraud
            texture_unit {
                texture wood.jpg
                filtering anisotropic
                max_anisotropy 8
                tex_address_mode clamp
            }
        }
    }
}

material debug_material {
    technique {
        pass {
            diffuse 0 1 0 0.3
            ambient 0 1 0
            emissive 1 1 1
            scene_blend alpha_blend
            depth_write off
        }
    }
}

material ground {
